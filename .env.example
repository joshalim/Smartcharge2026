# Docker Compose Environment Variables
# Copy this file to .env and modify values

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secure-jwt-secret-change-this

# PostgreSQL Password
POSTGRES_PASSWORD=postgres

# Backend URL for frontend to connect
# Use your domain name or server IP
REACT_APP_BACKEND_URL=http://localhost:8001

# Database Type: postgresql or mongodb
DATABASE_TYPE=postgresql

# PostgreSQL connection (for local/Docker deployment)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/evcharging
